# MasCloner Configuration Example
# Copy this file to .env and customize for your environment
# For production, generate proper keys and use secure passwords

# ============================================================================
# APPLICATION BASE
# ============================================================================
MASCLONER_BASE_DIR=/srv/mascloner
MASCLONER_DB_PATH=data/mascloner.db
MASCLONER_RCLONE_CONF=etc/rclone.conf
MASCLONER_ENV_FILE=etc/mascloner-sync.env
MASCLONER_LOG_DIR=logs

# Encryption key for sensitive data (REQUIRED for production)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASCLONER_FERNET_KEY=

# ============================================================================
# AUTHENTICATION (NEW in v2.0)
# ============================================================================
# Set to 1/true/yes/on to enable HTTP Basic Auth for API and UI
MASCLONER_AUTH_ENABLED=0

# Required when MASCLONER_AUTH_ENABLED=1
MASCLONER_AUTH_USERNAME=
MASCLONER_AUTH_PASSWORD=

# Optional: API key authentication (alternative to Basic Auth)
# MASCLONER_API_KEY=

# ============================================================================
# API/UI BINDING
# ============================================================================
API_HOST=127.0.0.1
API_PORT=8787
UI_HOST=127.0.0.1
UI_PORT=8501

# CORS origins (comma-separated, optional)
# MASCLONER_CORS_ORIGINS=http://localhost:8501,https://your-domain.com

# ============================================================================
# SCHEDULER DEFAULTS
# ============================================================================
SYNC_INTERVAL_MIN=5
SYNC_JITTER_SEC=20

# ============================================================================
# RCLONE PERFORMANCE SETTINGS
# ============================================================================
RCLONE_TRANSFERS=4
RCLONE_CHECKERS=8
RCLONE_TPSLIMIT=10
RCLONE_TPSLIMIT_BURST=100
RCLONE_BWLIMIT=0
RCLONE_DRIVE_EXPORT=docx,xlsx,pptx
RCLONE_LOG_LEVEL=NOTICE

# Advanced rclone tuning
RCLONE_STATS_INTERVAL=60s
RCLONE_BUFFER_SIZE=32Mi
RCLONE_DRIVE_CHUNK_SIZE=64M
RCLONE_DRIVE_UPLOAD_CUTOFF=128M
RCLONE_RETRIES=5
RCLONE_RETRIES_SLEEP=10s
RCLONE_LOW_LEVEL_RETRIES=10
RCLONE_TIMEOUT=5m
RCLONE_FAST_LIST=0

# Performance optimization (NEW in v2.0)
# Set to 1 to disable per-file event logging (reduces database writes)
MASCLONER_LIGHTWEIGHT_EVENTS=0

# ============================================================================
# SYNC CONFIGURATION
# ============================================================================
GDRIVE_REMOTE=gdrive
GDRIVE_SRC=
NC_REMOTE=ncwebdav
NC_DEST_PATH=
NC_WEBDAV_URL=
NC_USER=
NC_PASS_OBSCURED=

# Google Drive OAuth (optional - use rclone auth flow instead)
# GDRIVE_OAUTH_CLIENT_ID=
# GDRIVE_OAUTH_CLIENT_SECRET=
